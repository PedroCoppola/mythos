<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".CreateGameActivity">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bg_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Imagen de fondo de fantasía"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/green" />

    <!-- Overlay oscuro -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000" />

    <!-- Botón volver -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Volver"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <!-- Caja de Creación -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_box_bg"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/tvCreateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoserif_family"
            android:text="Crear Nueva Aventura"
            android:textColor="@color/mythos_yellow"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etContext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_field_background"
            android:gravity="top"
            android:hint="Describí el mundo (ej: una ciudad cyberpunk, un bosque encantado...)"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_tertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCreateTitle" />

        <EditText
            android:id="@+id/etCharacter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_background"
            android:gravity="top"
            android:hint="Describí a tu personaje (ej: un detective cínico, una hechicera novata...)"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_tertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etContext" />

        <TextView
            android:id="@+id/labelTone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tono: de Serio a Cómico"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@id/etCharacter"
            app:layout_constraintTop_toBottomOf="@id/etCharacter" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderTone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:value="50"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintEnd_toEndOf="@id/etCharacter"
            app:layout_constraintStart_toStartOf="@id/etCharacter"
            app:layout_constraintTop_toBottomOf="@id/labelTone"
            app:thumbColor="@color/mythos_yellow"
            app:trackColorActive="@color/mythos_yellow"
            app:trackColorInactive="@color/mythos_highlight_gray" />

        <TextView
            android:id="@+id/labelDialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Estilo: de Narración a Diálogo"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@id/sliderTone"
            app:layout_constraintTop_toBottomOf="@id/sliderTone" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderDialogue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:value="50"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintEnd_toEndOf="@id/sliderTone"
            app:layout_constraintStart_toStartOf="@id/sliderTone"
            app:layout_constraintTop_toBottomOf="@id/labelDialogue"
            app:thumbColor="@color/mythos_yellow"
            app:trackColorActive="@color/mythos_yellow"
            app:trackColorInactive="@color/mythos_highlight_gray" />

        <Button
            android:id="@+id/btnCreateGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_primary_background"
            android:text="¡Crear Aventura!"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sliderDialogue"
            app:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
