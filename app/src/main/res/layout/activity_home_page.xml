<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">



    <!-- Fondo -->
    <ImageView
        android:id="@+id/bg_homepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/yellow"
        tools:ignore="ContentDescription" />

    <!-- Overlay oscuro -->
    <View
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C9000000" /> <!-- Aumenté un poco la opacidad -->

    <!-- Título y Perfil -->
    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Aventuras"
        android:textColor="@color/mythos_yellow"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:contentDescription="Ir al perfil de usuario"
        android:id="@+id/btnProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile_circle"
            android:scaleType="centerCrop"
            android:background="@color/mythos_highlight_gray"/>

    </androidx.cardview.widget.CardView>

    <!-- Caja Principal con Historias -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_box_bg"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"
        app:layout_constraintBottom_toTopOf="@id/fabNewGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.92">

        <!-- RecyclerView para historias -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGameSessions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_game_session" />

        <!-- Estado Vacío (Logueado, sin historias) -->
        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tenés historias aún.\n¡Creá tu primera aventura!"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Estado No Logueado -->
        <LinearLayout
            android:id="@+id/layoutNotLoggedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Querés guardar tus historias y ser un capo?"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_primary_background"
                android:text="Tocá acá para registrarte"
                android:textColor="@color/black"
                android:paddingHorizontal="24dp"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Botón flotante para crear nueva historia -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Crear historia"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/mythos_yellow"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




