<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1. El gradiente de fondo, con el color principal que pediste -->
    <gradient
        android:angle="270"
        android:endColor="#eeba2b"
        android:startColor="#FFD053"
        android:type="linear" />

    <!-- 2. El borde, con el color específico que definiste -->
    <stroke
        android:width="2dp"
        android:color="#edae49" />

    <!-- 3. Las puntas redondeadas en "medio círculo" -->
    <!-- Un valor de radio muy alto asegura que se vea como un semicírculo perfecto -->
    <corners android:radius="100dp" />

</shape>
