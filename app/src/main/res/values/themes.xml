<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Principal de la Aplicación -->
    <style name="Theme.Mythos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores Primarios (para highlights, FABs, etc.) -->
        <item name="colorPrimary">@color/mythos_yellow</item>
        <item name="colorPrimaryVariant">@color/mythos_yellow_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Colores de Fondo y Superficies -->
        <item name="android:windowBackground">@color/mythos_base_gray</item>
        <item name="colorSurface">@color/mythos_highlight_gray</item>
        <item name="android:statusBarColor">@color/mythos_base_gray</item>

        <!-- Fuente por Defecto para toda la App -->
        <item name="android:fontFamily">@font/notoserif_family</item>
        <item name="fontFamily">@font/notoserif_family</item>

        <!-- Color del texto -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ... (Acá arriba están tus otros estilos como Theme.Mythos) ... -->

    <!-- ============================================================= -->
    <!-- TEMA PARA LA SPLASH SCREEN                                    -->
    <!-- ============================================================= -->
    <!-- En res/values/themes.xml -->


    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Color de fondo del diálogo -->
        <item name="android:background">@color/mythos_highlight_gray</item>

        <!-- Color del texto del título -->
        <item name="android:textColorPrimary">@color/mythos_yellow</item>

        <!-- Color del texto del mensaje -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Estilo de los botones -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.Button</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <!-- 1. El color de fondo de toda la ventana. Negro sólido. -->
        <item name="windowSplashScreenBackground">@android:color/black</item>

        <!--
            2. El ícono que se mostrará en el centro.
               AHORA USAMOS NUESTRO LAYER-LIST COMPATIBLE.
        -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_drawable_layered</item>

        <!-- 3. Colores de las barras del sistema -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- 4. El tema al que la app debe cambiar DESPUÉS de la splash. -->
        <item name="postSplashScreenTheme">@style/Theme.Mythos</item>
    </style>



    <!-- Estilo para los botones dentro del diálogo -->
    <style name="AlertDialog.Button" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Color del texto de los botones (ej: "Borrar", "Cancelar") -->
        <item name="android:textColor">@color/mythos_yellow</item>
    </style>



</resources>
